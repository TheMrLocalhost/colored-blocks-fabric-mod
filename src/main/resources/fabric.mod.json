{
  "schemaVersion": 1,
  "id": "colored_blocks",
  "version": "${version}",

  "name": "Colored Blocks",
  "description": "This mod adds color variants of different blocks",
  "authors": [
    "MrLocalhost"
  ],
  "contact": {
    "homepage": "https://github.com/TheMrLocalhost/",
    "sources": "https://github.com/TheMrLocalhost/colored-blocks-fabric-mod"
  },

  "license": "MIT License",
  "icon": "assets/colored_blocks/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.mrlocalhost.coloredblocks.ColoredBlocks"
    ],
    "client": [
      "com.mrlocalhost.coloredblocks.ColoredBlocksClient"
    ],
    "fabric-datagen": [
      "com.mrlocalhost.coloredblocks.datagen.ModDataGeneration"
    ]
  },
  "mixins": [
    "coloredblocks.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.11",
    "fabric-api": "*",
    "minecraft": "~1.19.2",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
